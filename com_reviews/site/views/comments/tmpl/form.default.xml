<form
    type="browse"
    norows_placeholder="COM_RESTAURANTS_COMMON_NO_COMMENTS"
>
    <headerset>
        <header
                name="name"
                type="field"
                label="COM_REVIEW_COMMENTS_FIELD_USER_NAME"
                sortable="false"
                />

        <header
                name="date"
                type="field"
                label="COM_REVIEW_COMMENTS_FIELD_DATE"
                sortable="false"
                />

        <header
                name="comment"
                type="field"
                label="COM_REVIEW_COMMENTS_FIELD_COMMENT"
                sortable="false"
                />
    </headerset>
    <fieldset name="items" >
        <field
			name="username"
			type="user"
		    />

		 <field
			name="date"
			type="text"
            />

		<field
			name="comment"
			type="text"
            show_link="true"
            url="index.php?option=com_reviews&amp;view=comment&amp;id=[ITEM:ID]"
            />
	</fieldset>
</form>
