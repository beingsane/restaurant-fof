<form
	validate="true"
>
	<fieldset
		name="comments"
		class="form-vertical span8"
	>
		<field
			name="name"
			type="text"
			label="COM_REVIEW_COMMENTS_NAME"
			size="50"
		 />

		 <field
			name="date"
			type="calendar"
			default="now"
			size="50"
			readonly="true"
		 />

		<field
			name="comment"
			type="editor"
			label="COM_REVIEW_COMMENTS_COMMENT"
		 />

        <field
                name="restaurant"
                type="hidden"
        />
	</fieldset>
</form>
